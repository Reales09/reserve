                        :alt="item.name"
                        class="w-16 h-16 object-cover rounded mr-4 border shadow-sm"
                    />
                    <div class="flex-1">
                        <h3
                            class="font-semibold text-gray-800"
                            x-text="item.name"
                        >
                        </h3>
                        <p
                            class="text-sm text-gray-500"
                            x-text="item.viscosity"
                        >
                        </p>
                        <div class="flex items-center mt-2">
                            <button
                                @click="decreaseQuantity(item.id)"
                                class="bg-gray-200 hover:bg-gray-300 rounded px-2 py-1 text-lg font-bold transition-colors duration-200"
                                >-</button
                            >
                            <span
                                class="mx-2 font-semibold"
                                x-text="item.quantity"></span>
                            <button
                                @click="increaseQuantity(item.id)"
                                class="bg-gray-200 hover:bg-gray-300 rounded px-2 py-1 text-lg font-bold transition-colors duration-200"
                                >+</button
                            >
                        </div>
                    </div>
                    <div class="flex flex-col items-end ml-4">
                        <span
                            class="text-blue-600 font-bold text-lg"
                            x-text="`$${(item.price * item.quantity).toFixed(2)}`"
                        ></span>
                        <button
                            @click="removeItem(item.id)"
                            class="text-red-500 hover:text-red-700 underline text-xs mt-2 transition-colors duration-200"
                            >Eliminar</button
                        >
                    </div>
                </div>
            </template>
        </div>

        <!-- Footer -->
        <div class="p-6 border-t border-gray-200 bg-white">
            <div class="flex items-center justify-between mb-4">
                <span class="text-lg font-semibold text-gray-700">Total:</span>
                <span
                    class="text-2xl font-bold text-blue-600"
                    x-text="`$${cartTotal().toFixed(2)}`"></span>
            </div>
            <button
                @click="showCheckoutModal = true"
                class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 rounded-lg transition-all duration-200 text-lg shadow-lg hover:shadow-xl transform hover:scale-105"
                :disabled="cartItems.length === 0"
                :class="{'opacity-50 cursor-not-allowed': cartItems.length === 0, 'animate-pulse': cartItems.length > 0}"
                >ðŸ›’ Finalizar compra</button
            >
        </div>
    </div>
</div>
