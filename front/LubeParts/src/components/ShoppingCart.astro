<script>
  // @ts-nocheck
  /**
   * @typedef {{
   *  id: string,
   *  name: string,
   *  price: number,
   *  image: string,
   *  viscosity: string,
   *  quantity: number
   * }} CartItem
   */
  
  function cartStore() {
    return {
      /** @type {boolean} */
      isOpen: false,
      /** @type {boolean} */
      showCheckoutModal: false,
      /** @type {boolean} */
      showWhatsAppModal: false,
      /** @type {CartItem[]} */
      cartItems: [],
      /** @type {boolean} */
      showAdded: false,
      /** @type {string} */
      addedName: '',
      /** @type {string} */
      whatsappPhone: '573165356255',

      init() {
        try {
          this.cartItems = JSON.parse(localStorage.getItem('lubricantes_cart') || '[]');
        } catch (e) {
          this.cartItems = [];
        }
        window.addEventListener('add-to-cart', (e) => {
          // @ts-ignore
          this.addItem(e.detail);
        });
      },

      toggleCart() {
        this.isOpen = !this.isOpen;
      },

      saveCart() {
        try {
          localStorage.setItem('lubricantes_cart', JSON.stringify(this.cartItems));
        } catch (e) {
          console.error('Error saving cart:', e);
        }
      },

      /** @param {{id: string, name: string, price: number, image: string, viscosity: string}} product */
      addItem(product) {
        const existing = this.cartItems.find((item) => item.id === product.id);
        if (existing) {
          existing.quantity += 1;
        } else {
          this.cartItems.push({ ...product, quantity: 1 });
        }
        this.saveCart();
        this.showAddedAnimation(product.name);
      },

      /** @param {string} id */
      removeItem(id) {
        this.cartItems = this.cartItems.filter((item) => item.id !== id);
        this.saveCart();
      },

      /** @param {string} id */
      increaseQuantity(id) {
        const item = this.cartItems.find((item) => item.id === id);
        if (item) {
          item.quantity += 1;
          this.saveCart();
        }
      },

      /** @param {string} id */
      decreaseQuantity(id) {
        const item = this.cartItems.find((item) => item.id === id);
        if (item && item.quantity > 1) {
          item.quantity -= 1;
          this.saveCart();
        } else if (item) {
          this.removeItem(id);
        }
      },

      /** @returns {number} */
      cartTotal() {
        return this.cartItems.reduce((sum, item) => sum + item.price * item.quantity, 0);
      },

      /** @param {string} name */
      showAddedAnimation(name) {
        this.addedName = name;
        this.showAdded = true;
        setTimeout(() => {
          this.showAdded = false;
        }, 1500);
      },

      processOrder() {
        this.cartItems = [];
        this.saveCart();
        this.showCheckoutModal = false;
        this.showWhatsAppModal = false;
        this.isOpen = false;
      },

      /** @returns {string} */
      orderText() {
        const lines = this.cartItems.map((item) =>
          '- ' + item.name + ' x' + item.quantity + ' ($' + item.price.toFixed(2) + ' c/u) = $' + (item.price * item.quantity).toFixed(2)
        );
        const total = this.cartTotal().toFixed(2);
        return 'Hola, deseo confirmar mi pedido:\n' + lines.join('\n') + '\nTotal: $' + total;
      },

      /** @returns {string} */
      whatsappUrl() {
        const text = this.orderText();
        return `https://wa.me/${this.whatsappPhone}?text=${encodeURIComponent(text)}`;
      },

      openWhatsAppModal() {
        this.showCheckoutModal = false;
        this.showWhatsAppModal = true;
      },

      completeOrder() {
        this.processOrder();
      },
    };
  }
</script>
