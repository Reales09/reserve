            class="flex items-center justify-between p-6 border-b border-gray-200 bg-gradient-to-r from-blue-600 to-blue-800"
        >
            <h2 class="text-2xl font-bold text-white">ðŸ›’ Tu carrito</h2>
            <button
                @click="toggleCart()"
                class="text-white hover:text-gray-200 text-3xl font-bold transition-colors duration-200"
                >&times;</button
            >
        </div>

        <!-- Lista de productos -->
        <div class="flex-1 overflow-y-auto p-6 space-y-4">
            <template x-if="cartItems.length === 0">
