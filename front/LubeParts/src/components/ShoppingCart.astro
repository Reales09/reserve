<div
    x-data="{
    isOpen: false,
    showCheckoutModal: false,
    cartItems: [],
    showAdded: false,
    addedName: '',

    init() {
        try {
            this.cartItems = JSON.parse(localStorage.getItem('lubricantes_cart') || '[]');
        } catch (e) {
            this.cartItems = [];
        }
        
        window.addEventListener('add-to-cart', (e) => {
            this.addItem(e.detail);
        });
    },

    toggleCart() {
        this.isOpen = !this.isOpen;
    },

    saveCart() {
        try {
            localStorage.setItem('lubricantes_cart', JSON.stringify(this.cartItems));
        } catch (e) {
            console.error('Error saving cart:', e);
        }
    },

    addItem(product) {
        const existing = this.cartItems.find(item => item.id === product.id);
        if (existing) {
            existing.quantity += 1;
        } else {
            this.cartItems.push({...product, quantity: 1});
        }
        this.saveCart();
        this.showAddedAnimation(product.name);
    },

    removeItem(id) {
        this.cartItems = this.cartItems.filter(item => item.id !== id);
        this.saveCart();
    },

    increaseQuantity(id) {
        const item = this.cartItems.find(item => item.id === id);
        if (item) {
            item.quantity += 1;
            this.saveCart();
        }
    },

    decreaseQuantity(id) {
        const item = this.cartItems.find(item => item.id === id);
        if (item && item.quantity > 1) {
            item.quantity -= 1;
            this.saveCart();
        } else if (item) {
            this.removeItem(id);
        }
    },

    cartTotal() {
        return this.cartItems.reduce((sum, item) => sum + item.price * item.quantity, 0);
    },

    showAddedAnimation(name) {
        this.addedName = name;
        this.showAdded = true;
        setTimeout(() => {
            this.showAdded = false;
        }, 1500);
    },

    processOrder() {
        alert('Â¡Gracias por tu compra! Tu orden ha sido procesada exitosamente.');
        this.cartItems = [];
        this.saveCart();
        this.showCheckoutModal = false;
        this.isOpen = false;
    }
}"
    class="z-50"
>
    <!-- AnimaciÃ³n de producto agregado -->
    <div
        x-show="showAdded"
        x-transition:enter="transform ease-out duration-300"
        x-transition:enter-start="translate-y-8 opacity-0"
        x-transition:enter-end="translate-y-0 opacity-100"
        x-transition:leave="transform ease-in duration-200"
        x-transition:leave-start="translate-y-0 opacity-100"
        x-transition:leave-end="translate-y-8 opacity-0"
        class="fixed bottom-28 right-8 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg flex items-center gap-2 text-lg font-semibold z-50"
        style="display: none;"
    >
        <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M5 13l4 4L19 7"></path>
        </svg>
        <span x-text="`Â¡${addedName} agregado al carrito!`"></span>
    </div>

    <!-- Modal de resumen de compra -->
    <div
        x-show="showCheckoutModal"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4"
        style="display: none;"
        @click.away="showCheckoutModal = false"
    >
        <div
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="transform scale-95 opacity-0"
            x-transition:enter-end="transform scale-100 opacity-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="transform scale-100 opacity-100"
            x-transition:leave-end="transform scale-95 opacity-0"
            class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden"
        >
            <!-- Header del modal -->
            <div
                class="bg-gradient-to-r from-green-500 to-green-600 text-white p-6"
            >
                <div class="flex items-center justify-between">
                    <h2 class="text-2xl font-bold">ðŸ›’ Resumen de tu compra</h2>
                    <button
                        @click="showCheckoutModal = false"
                        class="text-white hover:text-gray-200 text-3xl font-bold transition-colors duration-200"
                        >&times;</button
                    >
                </div>
                <p class="text-green-100 mt-2">
                    Revisa los detalles antes de confirmar
                </p>
            </div>

            <!-- Contenido del modal -->
            <div class="p-6 overflow-y-auto max-h-[60vh]">
                <!-- Lista de productos -->
                <div class="space-y-4 mb-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">
                        Productos seleccionados:
                    </h3>
                    <template x-for="item in cartItems" :key="item.id">
                        <div
                            class="flex items-center bg-gray-50 rounded-lg p-4 border border-gray-200"
                        >
                            <img
                                :src="item.image"
                                :alt="item.name"
                                class="w-16 h-16 object-cover rounded-lg mr-4 border shadow-sm"
                            />
                            <div class="flex-1">
                                <h4
                                    class="font-semibold text-gray-800"
                                    x-text="item.name"
                                >
                                </h4>
                                <p
                                    class="text-sm text-gray-500"
                                    x-text="item.viscosity"
                                >
                                </p>
                                <div class="flex items-center mt-2">
                                    <span class="text-sm text-gray-600"
                                        >Cantidad:
                                    </span>
                                    <span
                                        class="font-semibold ml-1"
                                        x-text="item.quantity"></span>
                                </div>
                            </div>
                            <div class="text-right">
                                <span
                                    class="text-lg font-bold text-green-600"
                                    x-text="`$${(item.price * item.quantity).toFixed(2)}`"
                                ></span>
                                <p
                                    class="text-sm text-gray-500"
                                    x-text="`$${item.price.toFixed(2)} c/u`"
