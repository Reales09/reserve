<!-- Script para envío -->
<script is:inline>
  document
    .getElementById("formContacto")
    .addEventListener("submit", async function (e) {
      e.preventDefault();

      const form = e.target;
      const nombre = form.nombre.value.trim();
      const correo = form.correo.value.trim();
      const telefono = form.telefono.value.trim();
      const mensaje = form.mensaje.value.trim();

      // Ocultar mensajes previos
      document.getElementById("mensajeExito").classList.add("hidden");
      document.getElementById("mensajeError").classList.add("hidden");

      const datos = {
        nombre,
        correo,
        telefono,
        mensaje,
        fecha: new Date().toISOString(),
      };

      try {
        const respuesta = await fetch("https://httpbin.org/post", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(datos),
        });

        if (respuesta.ok) {
          console.log("✅ Mensaje enviado:", await respuesta.json());
          document.getElementById("mensajeExito").classList.remove("hidden");
          form.reset();

          // Scroll suave al mensaje de éxito
          document.getElementById("mensajeExito").scrollIntoView({
            behavior: "smooth",
            block: "center",
          });
        } else {
          console.error("❌ Error al enviar");
          document.getElementById("mensajeError").classList.remove("hidden");
        }
      } catch (err) {
        console.error("❌ Error de red:", err);
        document.getElementById("mensajeError").classList.remove("hidden");
      }
    });
</script>
